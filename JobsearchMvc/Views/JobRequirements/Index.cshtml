@model IEnumerable<Dal.Models.JobRequirements>

@{
    ViewData["Title"] = "Index";
}

<h1>Job Requirements Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobRequirementId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobRequirementText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobRequirementId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobRequirementText)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.JobRequirementId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.JobRequirementId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.JobRequirementId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>