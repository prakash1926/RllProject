@model Dal.Models.JobRequirementDetails

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobRequirementDetailsText" class="control-label"></label>
                <input asp-for="JobRequirementDetailsText" class="form-control" />
                <span asp-validation-for="JobRequirementDetailsText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobRequirementId" class="control-label"></label>
                <input asp-for="JobRequirementId" class="form-control" />
                <span asp-validation-for="JobRequirementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostJobId" class="control-label"></label>
                <input asp-for="PostJobId" class="form-control" />
                <span asp-validation-for="PostJobId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>